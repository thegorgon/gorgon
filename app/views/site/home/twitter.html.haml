#header
  =link_to "&nbsp;".html_safe, @ext, :class => "profoto loading"
  =link_to "@jessereiss", @ext, :class => "handle"
  .follow
    =link_to "Follow Me", @ext, :class => "twitter-follow-button", "data-show-count" => "false", "data-width" => "62px", "data-button" => "grey", "data-text-color" => "#AAAAAA"
#timeline.loading
.more
  =link_to "older tweets >", @ext
%script{:id => "tweetTpl", :type => "text/x-jquery-tmpl"}
  .tweet
    .profile
    %time ${jQuery.timeago(created_at)}
    .text {{html jQuery.twitterify(text)}}
