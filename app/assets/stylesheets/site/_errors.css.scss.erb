.site.errors {
  #bd {
    text-align: center;
    padding-top: 20px;
    h1 {
      font-weight: normal;
      font-size: 16px;
      margin: 1em auto;
    }
    .error {
      margin: 0 auto;
    }
  }
  .server {
    .image {
      background-image: transparent url(<%= asset_path 'logos/bernini100x126.png' %>) no-repeat center center;
      width: 100px;
      height: 126px;
    }
  }
  .unprocessable {
    .image {
      background-image: transparent url(<%= asset_path 'logos/bernini100x126.png' %>) no-repeat center center;
      width: 100px;
      height: 126px;
    }
  }
  .not_found {
    .image {
      background-image: transparent url(<%= asset_path 'logos/bernini100x126.png' %>) no-repeat center center;
      width: 100px;
      height: 126px;
    }
  }
}
@media screen and (min-width: 1000px) {
  .site.errors {
    #bd {
      .error {
        width: 650px;
        h1 {
          font-size: 22px;
        }
      }
    }
  }
}