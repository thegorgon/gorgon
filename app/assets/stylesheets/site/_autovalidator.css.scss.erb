#site_projects_autovalidator {
  .forkme {
    width: 32px;
    height: 32px;
    margin: 5px 0;
    display: block;
    text-decoration: none;
    background-color: transparent;
    background-image: url(<%= asset_path('logos/external.png') %>);
    background-repeat: no-repeat;
    background-position: -70px 0;
    float: right;
    &:hover {
      background-position: -70px -36px; 
    }
  }
  h1#projtitle {
    line-height: 40px;
    font-size: 25px;
    padding-left: 50px;
    background: transparent url(<%= asset_path "projects/theautovalidator-logo-small.png" %>) no-repeat left center;
    margin: 0 0 20px;
  }
  p {
    margin: 10px 0;
  }
  .example {
    margin: 0 0 30px 0;
    font-size: 12px;
    p {
      margin: 5px 0;
    }
    ul {
      margin: 20px 0 0;
      list-style: none;
    }
    .source, .hidesrc {
      display: none;
    }
    &.withsrc {
      .showsrc {
        display: none;
      }
      .source, .hidesrc {
        display: block;
      }
    }
  }
  li {
    margin: 10px;
  }
  label {
    padding-right: 10px;
    font-weight: bold;
    line-height: 30px;
    font-size: 12px;
    width: 65px;
    display: inline-block;
    text-align: right;
  }
  .errors {
    padding-left: 5px;
    font-size: 11px;
    color: #999;
    display: block;
    padding-left: 80px;
    line-height: 30px;
  }
  h3 {
    font-size: 14px;
    font-weight: bold;
    margin: 10px 0;
  }
  .error-messages {
    height: 12px;
    margin-left: 89px;
    color: #933;
    font-size: 11px;
  }
  li.invalid {
    label {
      color: #993333;
    }
    input, select {
      border-color: #993333;
    }
  }
  input {
    height: 20px;
    width: 180px;
    border: 1px solid #999;
    padding: 5px 2px;
  }
  button {
    border: 1px solid #999;
    padding: 5px 2px;
    background: #999;
    color: #fff;
    margin-left: 78px;
    cursor: pointer;
    width: 185px;
  }
  button:hover {
    background: #333;
  }
}

@media screen and (min-width: 480px) and (max-width: 650px) {
  #site_projects_autovalidator {
    h1#projtitle {
      font-size: 30px;
    }
    .errors {
      display: inline;
      padding-left: 5px;
    }
  }
}

@media screen and (min-width: 1000px) {
  #site_projects_autovalidator {
    h1#projtitle {
      font-size: 30px;
    }
    .errors {
      display: inline;
      padding-left: 5px;
    }
  }
}