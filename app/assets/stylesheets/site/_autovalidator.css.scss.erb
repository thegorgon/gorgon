@import "../shared/_mixins";

#site_projects_autovalidator {
  #bd {
    h1 {
      line-height: 40px;
      font-size: 25px;
      padding-left: 50px;
      background: transparent url(<%= asset_path "projects/theautovalidator-logo-small.png" %>) no-repeat left center;
      margin: 0 0 20px;
    }    
  }
  p, ul {
    font-size: 14px;
    margin: 10px 0;
  }
  pre {
    font-size: 12px;
    padding: 0;
    word-wrap: normal;
  }
  .example {
    margin: 0 0 30px 0;
    line-height: 1.2em;
    table {
      margin: 20px 0;
      td {
        border-bottom: 1px solid #ededed;
        padding: 5px;
      }
      td.code {
        font-size: 12px;
        vertical-align: middle;
        background: #fff;
      }
      td.annotate {
        font-size: 12px;
        padding-left: 10px;
        border-bottom: 1px solid #ccc;
        background: transparent;
      }
    }
    p {
      margin: 10px 0;
    }
    ul {
      margin: 20px 0 0;
      list-style: none;
    }
    pre, .hidesrc {
      display: none;
    }
    &.withsrc {
      .showsrc {
        display: none;
      }
      pre, .hidesrc {
        display: block;
      }
    }
  }
  li {
    margin: 10px;
  }
  label {
    padding-right: 10px;
    font-weight: bold;
    line-height: 30px;
    font-size: 12px;
    width: 65px;
    display: inline-block;
    text-align: right;
  }
  .errors {
    padding-left: 5px;
    font-size: 11px;
    color: #999;
    display: block;
    padding-left: 80px;
    line-height: 30px;
  }
  h2 {
    font-size: 18px;
    font-weight: bold;
    @include nf;
    margin: 20px 0 10px;
  }
  .error-messages {
    height: 0px;
    padding: 0;
    margin: 0;
    color: #933;
    font-size: 11px;
  }
  form {
    font-size: 12px;
  }
  form.invalid {
    .error-messages {
      margin: 10px 10px 10px 89px;
      height: 12px
    }
  }
  li.invalid {
    label {
      color: #993333;
    }
    input, select {
      border-color: #993333;
    }
  }
  input {
    height: 20px;
    width: 180px;
    border: 1px solid #999;
    padding: 5px 2px;
  }
  button {
    border: 1px solid #999;
    padding: 5px 2px;
    background: #999;
    color: #fff;
    margin-left: 78px;
    cursor: pointer;
    width: 185px;
  }
  button:hover {
    background: #333;
  }
}

@media screen and (min-width: 480px) and (max-width: 650px) {
  #site_projects_autovalidator {
    h1#projtitle {
      font-size: 30px;
    }
    .errors {
      display: inline;
      padding-left: 5px;
    }
  }
}

@media screen and (min-width: 1000px) {
  #site_projects_autovalidator {
    h1#projtitle {
      font-size: 30px;
    }
    .errors {
      display: inline;
      padding-left: 5px;
    }
  }
}