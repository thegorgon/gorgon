@import "../shared/_mixins";

#page {
  width: 320px;
  margin: 0 auto;
  position: relative;
  background: #f0f0f0;
  color: #0f0f0f;
  padding-bottom: 10px;
  min-height: 100%;
  @include box_shadow(rgba(0,0,0,0.75) 0px 0px 10px);
  z-index: 2;
}
body, html {
  background: #000;
}
#bg {
  background: #000;
  position: absolute;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}
header {
  padding: 25px 10px 10px;
  width: 250px;
  height: 100%;
  color: #000;
  text-align: left;
  margin-bottom: 10px;
  nav.submenu {
    display: none;
    padding-top: 20px;
    h2 {
      font-weight: normal;
      font-size: 18px;
      @include tf;
    }
    li {
      float: left;
      display: block;
      padding: 5px 5px 5px 0;
    }
  }
  summary {
    font-size: 14px;
    display: none;
    margin: 20px auto;
    text-shadow: rgba(255,255,255,1) 1px 0px 0px;
    p {
      margin: 10px 0;
    }
  }
  .logo {
    display: block;
  }
  h1 {
    font-weight: normal;
    font-size: 40px;
  }
  nav.int {
    @include tf;
    padding: 8px 0 0 0;
    font-size: 20px;
    a, a:visited {
      color: #000;
      text-decoration: none;
      padding: 1px 0;
      margin-right: 10px;
      &.first {
        padding-left: 0;
      }
      &:hover {
        text-shadow: none;
        background: #000;
        color: #fff;
      }
      &.active, &:active {
        border-bottom: 1px solid #333;
      }
    }
  }
}
.rule {
  height: 0;
  width: 100%;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #fff;
  margin: 0 auto;
}
a, a:visited {
  color: #666;
  text-decoration: underline;
  &:hover {
    color: #000;
  }
}  
#bd {
  padding: 0 10px;
}
nav.ext {
  clear: both;
  width: 200px;
  margin: 20px 0 0 0;
  h2 {
    @include tf;
    font-weight: normal;
    font-size: 1.2em;
    margin: 0 0 10px 0;
  }
  a {
    width: 32px;
    height: 32px;
    margin: 0 5px;
    display: block;
    text-decoration: none;
    background-color: transparent;
    background-image: url(<%= asset_path('logos/external.png') %>);
    background-repeat: no-repeat;
    float: left;
    &.first {
      margin-left: 0;
    }
    &.last {
      margin-right: 0;
    }
    &.aboutme {
      background-position: 0 0;
      &:hover {
        background-position: 0 -36px;
      }
    }
    &.twitter {
      background-position: -105px 0;
      &:hover {
        background-position: -105px -36px;
      }
    }
    &.linkedin {
      background-position: -140px 0;
      &:hover {
        background-position: -140px -36px;
      }
    }
    &.github {
      background-position: -70px 0;
      &:hover {
        background-position: -70px -36px;
        
      }
    }
    &.stackoverflow {
      background-position: -35px 0;
      &:hover {
        background-position: -35px -36px;
      }
    }
  }
}
h1, h2 {
  text-shadow: rgba(255,255,255,1) 0px 1px 0px;
  @include tf;
} 

@media screen and (min-width: 480px) and (max-width: 650px) {
  #page {
    width: 480px;
  }
  header {
    width: 460px;
    margin: 0 auto 10px auto;
    text-align: center;
    nav.ext {
      margin: 20px auto 0;
    }
  }
}

@media screen and (min-width: 650px) {
  #page {
    width: 650px;
  }
  header {
    height: 100%;
    padding: 25px;
    position: absolute;
    right: 0;
    top: 0;
    float: right;
    summary {
      display: block;
    }
    nav.submenu {
      display: block;
    }
  }
  #bd {
    padding: 20px 25px 50px 25px;
    margin-right: 300px;
  }
  .rule {
    height: auto;
    width: 0;
    border-left: 1px solid #ddd;
    border-right: 1px solid #fff;
    position: absolute;
    right: 300px;
    bottom: 0;
    top: 0;
  }
} 

@media screen and (min-width: 1000px) {
  #page {
    width: 1000px;
    padding-bottom: 100px;
  }
}